{
    "name": "mcp/mcp-adapters",
    "description": "MCP Adapters for WordPress plugins using Abilities API",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.0",
        "wordpress/mcp-adapter": "^0.1.0",
        "wordpress/abilities-api": "^0.1.0"
    },
    "autoload": {
        "psr-4": {
            "MCP\\Adapters\\": "classes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "automattic/jetpack-autoloader": true
        }
    }
}
